<div id="creative_pages">
  <div class="slide_content">
    <% if @bids.present? %>
      <ul class="jcarousel-skin-tango thin" id="creative_slide">
        <% for bid in @bids %>
          <li>
            <div class="slide_contpreview">
              <div class="slide_contpreview_ima">
                <%= image_tag(bid.images.first.image.url(:original), :style => 'width: 200px; height :150px;') %>
              </div>
              <div class="slide_contpreview_text">
                <table>
                  <tr>
                    <td colspan="2">CR:&nbsp;<%= bid.project.user.name%></td>
                    <td>TIT:<%= bid.project.topic %></td>
                  </tr>
                  <tr>
                    <td colspan="2">
                    </td>
                    <td width="100px;">CAT:<%= bid.project.categories%></td>
                  </tr>
                  <tr>
                    <td><%= image_tag('/images/views.png') %>
                      <%= bid.bid_count %></td><!--views of this piece -->
                    <td><%= image_tag('/images/coment.png') %>
                      <%= bid.comments.count %></td>
                    <td>
                      <%= image_tag('/images/like.png') %>
                      <%= bid.project_likes.count %>
                    </td><!-- coments to piece -->
                  </tr>
                </table>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <span style="color: red;float: left;font-size: 20px;left: 170px;position: relative;top: 70px;">No hay Likes</span>
    <% end %>
  </div>
</div>
<script>
  jQuery(document).ready(function() {
    jQuery('.thin').jcarousel({scroll: 1});
  });
</script>

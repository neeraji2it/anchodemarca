<div id="courses">
  <div class="cursosam"></div>
  <div class="contents">
    <table border="0" width="100%">
      <tbody>
        <tr>
          <td style="position:relative; width: 240px;">
            <br /><br /><br /> Actividad Reciente<br /> Proyectos Calificados: 47 <br />Piezas Calificadas: 52 <br />Proyectos Sociales<br /> Calificados: 8<br />
          </td>
          <td>
            <% if @courses.present? %>
              <% for course in @courses %>
                <div class="slide_contpreview">
                  <div class="slide_contpreview_ima">
                    <% if course.images.present? %>
                      <%= link_to image_tag(course.images.first.image.url(:original), :style => 'width: 200px; height :150px;', :id => 'image'), course_path(course) %>
                    <% else %>
                      <%= link_to image_tag(("/images/images.jpeg"), :width => '200px', :height => '150px'), course_path(course) %>
                    <% end %>
                  </div>
                  <div class="slide_contpreview_text">
                    <% i = 0 %>
                    <%=hidden_field_tag i+= course.user.total.to_f %>
                    <table>
                      <tr>
                        <td colspan="2">TT: <%= course.user.name %></td>
                        <td><%= course.title %></td><!-- Tutorial name-->
                      </tr>
                      <tr>
                        <td colspan="2">
                          <%= image_tag(("/images/star.png"), :border => 'none', :height => '12px;', :width => '12px;')%>
                          <%= course.user.post_class %>, en <%= course.user.total %>
                        </td>
                        <td><%= course.categories %></td>
                      </tr>
                      <tr>
                        <td><%= image_tag('/images/views.png') %>
                          <%= course.user.sent_likes.count %></td><!--views of this piece -->
                        <td><%= image_tag('/images/coment.png') %>
                          <%= course.comments.count %></td><!-- coments to piece -->
                        <td><%= image_tag('/images/like.png') %>
                          <%= course.project_likes.count %></td><!-- likes to Piece -->
                      </tr>
                      <tr>
                        <td colspan="3"> No to Intesates</td>
                      </tr>
                    </table>
                  </div>
                </div>
              <% end %>
            <% else %>
              <span style="color: #575763;font-size: 20px;left: 125px;position: relative;text-align: center;top: 180px;">No hay cursos.</span>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="fincontenidos"></div>
  <hr />
  <% if @courses.present? %>
    <%= will_paginate @courses, :param_name => 'course_page',:page_links => false, :previous_label => 'Primero', :next_label => "Ultimo" %>
  <% end %>
</div>
